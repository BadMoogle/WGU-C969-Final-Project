<Window x:Class="Scheduling_Solution.LoadingDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduling_Solution"
        xmlns:p = "clr-namespace:Scheduling_Solution.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.LoadingData}" Height="141" Width="328" ResizeMode="NoResize" ContentRendered="Window_ContentRendered">
    <Grid>
        <Label Content="{x:Static p:Resources.LoadingDataPleaseWait}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="15,25,0,0" VerticalAlignment="Top" Width="295"/>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="95,65,0,0" VerticalAlignment="Top" Width="130" IsIndeterminate="True"/>
    </Grid>
</Window>
